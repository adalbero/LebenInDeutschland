<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Bundesland">

        <ListPreference
            android:key="pref.land"
            android:summary="%s"
            android:title="Select Bundesland" />

    </PreferenceCategory>

    <PreferenceCategory android:title="About">

        <Preference
            android:key="pref.version"
            android:summary="unknown"
            android:title="Version" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="debug.category"
        android:title="Deug">

        <Preference
            android:key="debug.dump"
            android:title="Dump variables" />
        <Preference
            android:key="debug.remove.all"
            android:title="Clear all variables" />
        <Preference
            android:key="debug.remove.exam"
            android:title="Clear exam variables" />
        <Preference
            android:key="debug.remove.pref"
            android:title="Clear preference variables" />

    </PreferenceCategory>

</PreferenceScreen>
