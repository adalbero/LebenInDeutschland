<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Preferences">

        <ListPreference
            android:key="pref.land"
            android:summary="%s"
            android:title="Select Bundesland" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref.inline.mode"
            android:summaryOff="Show question in it's own view"
            android:summaryOn="Respond to question directly in the list view "
            android:title="Question Inline" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Statistics">

        <ListPreference
            android:defaultValue="5"
            android:key="pref.stat.max"
            android:summary="%s"
            android:title="Statistics History" />

        <Preference
            android:key="pref.remove.stat"
            android:summary="Clear statistics of all questions"
            android:title="Clear statistics" />

    </PreferenceCategory>

    <PreferenceCategory android:title="About">

        <Preference
            android:key="pref.version"
            android:summary="unknown"
            android:title="Version" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="beta.category"
        android:title="Beta">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="beta.pref.voice"
            android:summary="*** BETA FEATURE ***\nEnabel voice command to select an option"
            android:title="Enable Voice Command" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="debug.category"
        android:title="Debug">

        <EditTextPreference
            android:key="debug.userid"
            android:summary="Identifies the debug session id"
            android:title="Debug ID" />
        <Preference
            android:key="debug.dump"
            android:summary="Dump variabels in console"
            android:title="Dump variables" />
        <Preference
            android:key="debug.dump.stat"
            android:summary="Dump statistics in console"
            android:title="Dump statistics" />
        <Preference
            android:key="debug.remove.all"
            android:summary="Delete all variables from memory (including preferences)"
            android:title="Clear all variables" />
        <Preference
            android:key="debug.remove.exam"
            android:summary="Delete variables from Exam run"
            android:title="Clear exam variables" />
        <Preference
            android:key="debug.remove.pref"
            android:summary="Delete preferences variables"
            android:title="Clear preference variables" />
        <Preference
            android:key="debug.test"
            android:summary="Execute 100 tests randomly"
            android:title="Simulat test" />

    </PreferenceCategory>

</PreferenceScreen>
