<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <RadioButton
                android:id="@+id/view_sort_by_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:tag="1"
                android:text="question number."
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/view_sort_by_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:tag="2"
                android:text="question rating."
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/view_sort_by_shuffle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:tag="0"
                android:text="Shuffle questions."
                android:textSize="18sp" />

        </RadioGroup>

        <CheckBox
            android:id="@+id/view_sort_reverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Reverse order"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
