<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_status"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorNotAnswerd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/text_header"
        app:layout_constraintTop_toTopOf="@+id/text_question"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:padding="8dp"
        android:text="num"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/text_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@color/colorQuestion"
        android:padding="8dp"
        android:text="question"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/text_header"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/text_header"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/view_status"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>